<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a.calculator.MainActivity">

    <Button
        android:text="0"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/Btn_point"
        android:layout_toEndOf="@+id/Btn_point"
        android:id="@+id/Btn_0" />

    <Button
        android:text="="
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_is"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/Btn_0"
        android:layout_toEndOf="@+id/Btn_0" />

    <Button
        android:text="+"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_add"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/Btn_is"
        android:layout_toEndOf="@+id/Btn_is" />

    <Button
        android:text="1"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_1"
        android:layout_above="@+id/Btn_point"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="2"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_2"
        android:layout_above="@+id/Btn_0"
        android:layout_toRightOf="@+id/Btn_point"
        android:layout_toEndOf="@+id/Btn_point" />

    <Button
        android:text="3"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_3"
        android:layout_alignTop="@+id/Btn_2"
        android:layout_toRightOf="@+id/Btn_0"
        android:layout_toEndOf="@+id/Btn_0" />

    <Button
        android:text="-"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_inc"
        android:layout_above="@+id/Btn_add"
        android:layout_toRightOf="@+id/Btn_is"
        android:layout_toEndOf="@+id/Btn_is" />

    <Button
        android:text="4"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_4"
        android:layout_above="@+id/Btn_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="5"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_5"
        android:layout_above="@+id/Btn_2"
        android:layout_toRightOf="@+id/Btn_4"
        android:layout_toEndOf="@+id/Btn_4" />

    <Button
        android:text="6"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_6"
        android:layout_above="@+id/Btn_3"
        android:layout_toRightOf="@+id/Btn_5"
        android:layout_toEndOf="@+id/Btn_5" />

    <Button
        android:text="*"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_muti"
        android:layout_above="@+id/Btn_inc"
        android:layout_toRightOf="@+id/Btn_6"
        android:layout_toEndOf="@+id/Btn_6" />

    <Button
        android:text="7"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_7"
        android:layout_above="@+id/Btn_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="8"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_8"
        android:layout_above="@+id/Btn_5"
        android:layout_toRightOf="@+id/Btn_7"
        android:layout_toEndOf="@+id/Btn_7" />

    <Button
        android:text="9"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_9"
        android:layout_above="@+id/Btn_6"
        android:layout_toRightOf="@+id/Btn_5"
        android:layout_toEndOf="@+id/Btn_5" />

    <Button
        android:text="/"
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_part"
        android:layout_above="@+id/Btn_muti"
        android:layout_toRightOf="@+id/Btn_9"
        android:layout_toEndOf="@+id/Btn_9" />

    <Button
        android:text="."
        android:layout_width="85dp"
        android:layout_height="70dp"
        android:id="@+id/Btn_point"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Btn_7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Btn_clear" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:enabled="false"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Bin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_bin"
        android:layout_above="@+id/Btn_part"
        android:layout_toRightOf="@+id/Btn_9"
        android:layout_toEndOf="@+id/Btn_9" />

    <Button
        android:text="Hex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Btn_7"
        android:layout_toRightOf="@+id/Btn_7"
        android:layout_toEndOf="@+id/Btn_7"
        android:id="@+id/Btn_hex" />

    <Button
        android:text="Otc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Btn_otc"
        android:layout_alignBaseline="@+id/Btn_bin"
        android:layout_alignBottom="@+id/Btn_bin"
        android:layout_toRightOf="@+id/Btn_8"
        android:layout_toEndOf="@+id/Btn_8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:enabled="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
